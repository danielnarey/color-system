{
  "name": "@metamodern/color-system",
  "version": "0.3.0",
  "description": "A configurable HSL color system for use with TailwindCSS",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/color-system"
  },
  "type": "module",
  "main": "dist/main.cjs",
  "module": "dist/module.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist/*",
    "build": "rollup -c",
    "lint": "eslint --fix index.js src",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run lint && npm run build && ava",
    "update": "updtr"
  },
  "dependencies": {
    "@arr/flatten": "^1.0.1",
    "@arr/foreach": "^1.0.1",
    "@arr/reduce": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-ava": "^10.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-types": "^1.0.2",
    "esm": "^3.2.25",
    "np": "^6.2.0",
    "rollup": "^1.31.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
